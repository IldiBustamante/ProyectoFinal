<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/Busqueda.js"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - El cielo de Agosto</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <nav class="navbar navbar-default navbar-fixed-top" id="navbarcolor">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar" data-target=".nav-item"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li title="Planetas visibles en Hemisferio Sur" class="in">@Html.ActionLink("Planetas", "Index", "Planetas")</li>
                    <li title="Estrellas visibles en Hemisferio Sur"class="in">@Html.ActionLink("Estrellas", "Index", "Estrellas")</li>
                    <li title="Nebulosas visibles en Hemisferio Sur">@Html.ActionLink("Nebulosas", "Index", "Nebulosas")</li>
                    <li title="¿Quién realizó este proyecto?">@Html.ActionLink("Contacto", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        @RenderSection("scripts", required: false)

        <footer class="pull-right">
            <p>&copy; @DateTime.Now.Year - Mi proyecto Technoloshe, Ildara Bustamante.</p>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
    </div>
</body>
</html>

